<div class="text-center my-5">
    <h1>{{title}}</h1>
    <h5 class="my-3">Posted by {{user.username}} on {{format_date date_created}}</h5>
    <p>{{content}}</p>
</div>
<div class="container text-center">
    <div class="row">
        {{#if logged_in}}
        <div class="col-md-6">
            <form id="comment-form" method="POST" data-id="{{id}}">
                <div class="input-group" style="height: 5rem;">
                    <span class="input-group-text">Add a Comment</span>
                    <textarea class="form-control" style="width: 10rem;" aria-label="With textarea" name="new-comment"
                        id="new-comment"></textarea>
                </div>
                <button id="submit-button" class="btn btn-info my-3" type="submit">Submit</button>
            </form>
        </div>
        {{/if}}
        <div class="col-md-6">
            <h4>Comments</h4>
            {{#if comments.length}}
            {{#each comments as |comment|}}
            <div class="card">
                <div class="card-body my-3">
                    <blockquote class="blockquote mb-0">
                        <p>{{comment.content}}</p>
                        <footer class="blockquote-footer card-subtitle text-body-secondary">{{comment.user.username}} on
                            {{format_date
                            comment.date_created}}</footer>
                    </blockquote>
                </div>
            </div>
            {{/each}}
            {{else}}
            <p>No comments yet.</p>
            {{/if}}
        </div>
    </div>
</div>


<script src="/js/addComment.js"></script>